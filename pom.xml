<!-- Freebus FTS POM. -->
<!-- see http://maven.apache.org/pom.html for documentation about the file format -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.freebus</groupId>
  <artifactId>fts</artifactId>
  <version>0.1-SNAPSHOT</version>
  <name>fts</name>
  <organisation>
    <name>The Freebus Project</name>
    <url>http://www.freebus.org</url>
  </organisation>
  <developers>
   <developer>
    <id>stefant</id>
    <name>Stefan Taferner</name>
    <email>stefan.taferner@gmx.at</email>
    <organization>The Freebus Project</organization>
    <organizationUrl>http://www.freebus.org</organizationUrl>
    <timezone>1</timezone>
   </developer>
  </developers>
  <scm>
    <connection>scm:svn:svn+ssh://svn.freebus.org/trunk/software/fts</connection>
    <developerConnection>scm:svn:svn+ssh://svn.freebus.org/trunk/software/fts</developerConnection>
  </scm>
  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>ftp-repository</id>
      <name>Stefan's Private Build Repository</name>
      <url>ftp:/...</url>
    </repository>
  </distributionManagement>
  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <finalName>fts</finalName>
          <archive>
            <manifest>
              <addClasspath>false</addClasspath>
              <mainClass>org.freebus.fts.Main</mainClass>
            </manifest>
            <!--  manifestEntries>
              <mode>development</mode>
              <url>${pom.url}</url>
            </manifestEntries -->
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
<!--           <finalName>fts-snapshot</finalName> -->
          <appendAssemblyId>true</appendAssemblyId>
          <archive>
            <manifest>
              <mainClass>org.freebus.fts.Main</mainClass>
            </manifest>
          </archive>
          <descriptors>
            <descriptor>assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>fts-zip</id>
            <phase>package</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.eclipse</groupId>
      <artifactId>swt</artifactId>
      <version>3.5.1</version>
      <type>jar</type>
      <scope>system</scope>
      <systemPath>${project.basedir}/contrib/swt/swt.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.gnu</groupId>
      <artifactId>rxtx</artifactId>
      <version>2.2pre2</version>
      <type>jar</type>
      <scope>system</scope>
      <systemPath>${project.basedir}/contrib/rxtx/RXTXcomm.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
