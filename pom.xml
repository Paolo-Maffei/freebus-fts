<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.freebus</groupId>
  <artifactId>fts</artifactId>
  <version>0.1-SNAPSHOT</version>
  <name>fts</name>
  <organization>
    <name>The Freebus Project</name>
    <url>http://www.freebus.org</url>
  </organization>
  <developers>
   <developer>
    <id>stefant</id>
    <name>Stefan Taferner</name>
    <email>stefan.taferner@gmx.at</email>
    <organization>The Freebus Project</organization>
    <organizationUrl>http://www.freebus.org</organizationUrl>
    <timezone>1</timezone>
   </developer>
  </developers>
  <scm>
    <connection>scm:svn:svn+ssh://svn.freebus.org/usr/local/svn/freebus/trunk/software/fts</connection>
    <developerConnection>scm:svn:svn+ssh://svn.freebus.org/usr/local/svn/freebus/trunk/software/fts</developerConnection>
  </scm>
  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>stefant-webspace</id>
      <name>Stefan's Webspace</name>
      <url>ftp://stefan.members.xpirio.at/htdocs/fts</url>
    </repository>
  </distributionManagement>
  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-alpha-6</version>
      </extension>
    </extensions>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <finalName>fts</finalName>
          <archive>
            <manifest>
              <addClasspath>false</addClasspath>
              <mainClass>org.freebus.fts.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <!-- <finalName>fts-snapshot</finalName> -->
          <appendAssemblyId>true</appendAssemblyId>
          <archive>
            <manifest>
              <mainClass>org.freebus.fts.Main</mainClass>
            </manifest>
          </archive>
          <descriptors>
            <descriptor>assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> 
            <phase>package</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
         <groupId>org.codehaus.mojo</groupId>
         <artifactId>exec-maven-plugin</artifactId>
         <version>1.1</version>
         <executions>
            <execution>
            <goals>
               <goal>exec</goal>
            </goals>
            </execution>
         </executions>
         <configuration>
            <executable>deploy-ftp.pl</executable>
            <arguments>
              <argument>--config=~/.deploy-fts</argument>
              <argument>--verbose</argument>
              <argument>target/fts-${project.version}-distribution.zip</argument>
            </arguments>
         </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.eclipse</groupId>
      <artifactId>swt</artifactId>
      <version>3.5.1</version>
      <type>jar</type>
      <scope>system</scope>
      <systemPath>${project.basedir}/contrib/swt/swt.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.gnu</groupId>
      <artifactId>rxtx</artifactId>
      <version>2.2pre2</version>
      <type>jar</type>
      <scope>system</scope>
      <systemPath>${project.basedir}/contrib/rxtx/RXTXcomm.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>oracle</groupId>
      <artifactId>toplink</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <scope>system</scope>
      <systemPath>${project.basedir}/contrib/toplink-essentials.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
