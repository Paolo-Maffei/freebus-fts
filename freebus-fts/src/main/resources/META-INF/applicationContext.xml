<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
 ">

 <import resource="spring-service.xml" />

 <context:component-scan base-package="org.freebus.fts.client.application" />
 <!-- <context:mbean-export /> -->

 <bean id="applicationFactory" class="org.freebus.fts.client.application.ApplicationFactory" />
 <bean id="application" factory-bean="applicationFactory" factory-method="createApplication" />

 <bean id="mainWindow" class="org.freebus.fts.client.application.MainWindow" lazy-init="true" />

</beans>
