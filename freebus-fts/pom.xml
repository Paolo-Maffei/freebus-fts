<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>parent</artifactId>
		<groupId>org.freebus.fts</groupId>
		<version>0.1-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
 <groupId>org.freebus.fts</groupId>
 <artifactId>client</artifactId>
 <version>0.1-SNAPSHOT</version>
 <name>freebus-fts</name>
 <organization>
  <name>The Freebus Project</name>
  <url>http://www.freebus.org</url>
 </organization>
 <developers>
  <developer>
   <id>stefant</id>
   <name>Stefan Taferner</name>
   <email>stefan.taferner@gmx.at</email>
   <organization>The Freebus Project</organization>
   <organizationUrl>http://www.freebus.org</organizationUrl>
   <timezone>1</timezone>
  </developer>
 </developers>
 <scm>
  <connection>scm:svn:https://devport.no-ip.org/dev/freebus/trunk/freebus-fts</connection>
  <developerConnection>scm:svn:https://devport.no-ip.org/dev/freebus/trunk/freebus-fts</developerConnection>
  <!-- connection>scm:svn:svn+ssh://svn.freebus.org/usr/local/svn/freebus/trunk/software/fts/freebus-fts</connection -->
  <!-- developerConnection>scm:svn:svn+ssh://svn.freebus.org/usr/local/svn/freebus/trunk/software/fts/freebus-fts</developerConnection -->
 </scm>
 <dependencyManagement>
 	<dependencies>
 		<dependency>
 			<groupId>org.freebus</groupId>
 			<artifactId>fts-common</artifactId>
 			<version>0.1-SNAPSHOT</version>
 			<type>jar</type>
 			<scope>compile</scope>
 		</dependency>
 		<dependency>
 			<groupId>org.freebus.fts</groupId>
 			<artifactId>products</artifactId>
 			<version>0.1-SNAPSHOT</version>
 			<type>jar</type>
 			<scope>compile</scope>
 		</dependency>
 		<dependency>
 			<groupId>org.freebus</groupId>
 			<artifactId>knxcomm</artifactId>
 			<version>0.1-SNAPSHOT</version>
 			<scope>compile</scope>
 		</dependency>
 		<dependency>
 			<groupId>org.freebus.fts</groupId>
 			<artifactId>project</artifactId>
 			<version>0.1-SNAPSHOT</version>
 			<type>jar</type>
 			<scope>compile</scope>
 		</dependency>
 	</dependencies>
 </dependencyManagement>
 <distributionManagement>
  <repository>
   <uniqueVersion>false</uniqueVersion>
   <id>stefant-webspace</id>
   <name>Stefan's Webspace</name>
   <url>ftp://stefan.members.xpirio.at/htdocs/fts</url>
  </repository>
 </distributionManagement>
 <build>
  <extensions>
   <extension>
    <groupId>org.apache.maven.wagon</groupId>
    <artifactId>wagon-ftp</artifactId>
    <version>1.0-alpha-6</version>
   </extension>
  </extensions>
  <defaultGoal>package</defaultGoal>
  <plugins>
   <plugin>
    <artifactId>maven-compiler-plugin</artifactId>
    <configuration>
     <source>1.6</source>
     <target>1.6</target>
    </configuration>
   </plugin>
   <plugin>
    <artifactId>maven-jar-plugin</artifactId>
    <configuration>
     <finalName>freebus-fts</finalName>
     <archive>
      <manifest>
       <addClasspath>false</addClasspath>
       <mainClass>org.freebus.fts.FTS</mainClass>
      </manifest>
     </archive>
    </configuration>
   </plugin>
   <plugin>
    <artifactId>maven-assembly-plugin</artifactId>
    <configuration>
     <!-- <finalName>fts-snapshot</finalName> -->
     <appendAssemblyId>true</appendAssemblyId>
     <archive>
      <manifest>
       <mainClass>org.freebus.fts.FTS</mainClass>
      </manifest>
     </archive>
     <descriptorRefs>
      <descriptorRef>jar-with-dependencies</descriptorRef>
     </descriptorRefs>
    </configuration>
   </plugin>
  </plugins>
 </build>
 <dependencies>
  <dependency>
  	<groupId>org.freebus.fts</groupId>
  	<artifactId>knxcomm</artifactId>
  	<version>0.1-SNAPSHOT</version>
  	<scope>compile</scope>
  </dependency>
  <dependency>
  	<groupId>org.freebus.fts</groupId>
  	<artifactId>common</artifactId>
  	<version>0.1-SNAPSHOT</version>
  	<type>jar</type>
  	<scope>compile</scope>
  </dependency>
  <dependency>
  	<groupId>org.freebus.fts</groupId>
  	<artifactId>project</artifactId>
  	<version>0.1-SNAPSHOT</version>
  	<scope>compile</scope>
  </dependency>
  
  <dependency>
   <groupId>junit</groupId>
   <artifactId>junit</artifactId>
   <version>3.8.1</version>
   <scope>test</scope>
  </dependency>
  <dependency>
   <groupId>javax.persistence</groupId>
   <artifactId>javax.persistence</artifactId>
   <version>2.0-SNAPSHOT</version>
  </dependency>
  <dependency>
   <groupId>hsqldb</groupId>
   <artifactId>hsqldb</artifactId>
   <version>1.8.0.7</version>
   <scope>runtime</scope>
  </dependency>
  <dependency>
   <groupId>org.eclipse.persistence</groupId>
   <artifactId>eclipselink</artifactId>
   <version>2.0.0-SNAPSHOT</version>
   <scope>compile</scope>
  </dependency>
  
  <dependency>
  	<groupId>mysql</groupId>
  	<artifactId>mysql-connector-java</artifactId>
  	<version>5.1.6</version>
  	<scope>runtime</scope>
  </dependency>
  <dependency>
  	<groupId>org.freebus.fts</groupId>
  	<artifactId>products</artifactId>
  	<version>0.1-SNAPSHOT</version>
  </dependency>
 </dependencies>
</project>
