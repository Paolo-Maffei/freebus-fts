<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_2_0.xsd"
 version="1.0">

 <persistence-unit name="default">
  <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
  <class>test.entities.TestFunctionalEntity</class>
  <class>test.entities.TestManufacturer</class>
  <properties>
   <property name="eclipselink.logging.logger" value="org.freebus.fts.common.db.CommonsLoggingSessionLog" />
   <property name="eclipselink.logging.level" value="INFO" />
   <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
   <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:test" />
   <property name="javax.persistence.jdbc.user" value="sa" />
   <property name="javax.persistence.jdbc.password" value="" />
   <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
   <property name="eclipselink.ddl-generation.output-mode" value="database" />
  </properties>
 </persistence-unit>
 
 <persistence-unit name="duplicate-entities">
  <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
  <class>test.entities.TestManufacturer</class>
  <class>test.entities.TestFunctionalEntity</class>
  <class>test.entities.TestManufacturer2</class>
  <properties>
   <property name="eclipselink.logging.logger" value="org.freebus.fts.common.db.CommonsLoggingSessionLog" />
   <property name="eclipselink.logging.level" value="INFO" />
   <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
   <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:test" />
   <property name="javax.persistence.jdbc.user" value="sa" />
   <property name="javax.persistence.jdbc.password" value="" />
   <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
   <property name="eclipselink.ddl-generation.output-mode" value="database" />
  </properties>
 </persistence-unit>
  
 <persistence-unit name="with-children">
  <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
  <class>test.entities.TestManufacturer</class>
  <class>test.entities.TestFunctionalEntityTree</class>
  <properties>
   <property name="eclipselink.logging.logger" value="org.freebus.fts.common.db.CommonsLoggingSessionLog" />
   <property name="eclipselink.logging.level" value="INFO" />
   <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
   <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:test" />
   <property name="javax.persistence.jdbc.user" value="sa" />
   <property name="javax.persistence.jdbc.password" value="" />
   <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
   <property name="eclipselink.ddl-generation.output-mode" value="database" />
  </properties>
 </persistence-unit>
 
</persistence>